<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/penawaran_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Detail Penawaran"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/addphoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/penawaran_title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_grey_rounded"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_image_24" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/addphoto"
            android:text="Nama Toko:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Keterangan"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/keteranganuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keterangan"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/kategoritxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keteranganuser"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Kategori :"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/hargatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kategoritxt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Harga :"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/metodepembayarantxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hargatxt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Metode pembayaran"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spinnermetode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/metodepembayarantxt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnermetode"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Kode Promo"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/kodepromo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/promo"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toLeftOf="@id/promobtn"
            android:background="@drawable/border_text"
            android:padding="12dp"
            android:singleLine="true" />
        <Button
            android:id="@+id/promobtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/promo"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_btn"
            android:text="Check" />
        <Button
            android:id="@+id/bayar"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/kodepromo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_btn"
            android:text="Bayar" />



    </RelativeLayout>
</ScrollView>